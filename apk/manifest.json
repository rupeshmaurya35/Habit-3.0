{
  "name": "Smart Reminders",
  "short_name": "Reminders",
  "description": "Set custom reminders that notify you at regular intervals. Perfect for habits, breaks, or any recurring tasks.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#4F76FF",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "categories": ["productivity", "utilities"],
  "prefer_related_applications": false,
  "related_applications": [],
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick 5min Reminder",
      "short_name": "Quick Start",
      "description": "Start a 5-minute reminder quickly",
      "url": "/?quick=true",
      "icons": [
        {
          "src": "/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": "400"
  },
  "protocol_handlers": [
    {
      "protocol": "web+reminder",
      "url": "/?reminder=%s"
    }
  ],
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}